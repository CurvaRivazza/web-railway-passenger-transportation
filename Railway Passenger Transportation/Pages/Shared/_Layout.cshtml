<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Railway_Passenger_Transportation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-brand" asp-area="" asp-page="/Index">TrainTrek</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-brand" asp-area="" asp-page="/Privacy">Политика конфиденциальности</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>


    <footer class="mt-auto">
        <div class="container footer-container">
            <div class="row">
                <div class="col-md-12">
                    &copy; 2024 - TrainTrek - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center social-links">
                <a href="https://github.com/S0s0Combain/Railway-Passenger-Transportation.git" class="text-decoration-none">
                    <img src="/Images/github.png" class="mx-1 mb-3" style="width: 30px; height: 30px;">
                </a>
                <a href="https://vk.com/id341462204" class="text-decoration-none">
                    <img src="/Images/VK.png" class="mx-1 mb-3" style="width: 30px; height: 30px;">
                </a>
            </div>
        </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>