@page
@model Railway_Passenger_Transportation.Pages.PaymentModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">Оплата билета</h1>
            <form id="paymentForm" asp-page-handler="Pay" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"></label>
                    <div class="col-md-6">
                        <input type="tel" class="form-control" placeholder="Номер карты" autocomplete="off" required/>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"></label>
                    <div class="col-md-6">
                        <input class="form-control" placeholder="Имя владельца карты" autocomplete="off" required/>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"></label>
                    <div class="col-md-3">
                        <input class="form-control" placeholder="MM/YY" autocomplete="off" required/>
                        <span class="text-danger"></span>
                    </div>
                    <label class="col-md-2 col-form-label"></label>
                    <div class="col-md-2">
                        <input class="form-control" placeholder="CVV" autocomplete="off" required/>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" class="btn btn-primary">Оплатить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>